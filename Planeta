public class Planeta {

    private String nome;
    private double diametro;
    private double massa;
    private double distanciaDoSol;

    public Planeta(String nome, double diametro, double massa, double distanciaDoSol) {
        this.nome = nome;
        this.diametro = diametro;
        this.massa = massa;
        this.distanciaDoSol = distanciaDoSol;
    }

    public void exibirInformacoes() {
        System.out.println("Nome: " + nome);
        System.out.println("Diâmetro: " + diametro + " km");
        System.out.println("Massa: " + massa + " kg");
        System.out.println("Distância do Sol: " + distanciaDoSol + " km");
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public double getDiametro() {
        return diametro;
    }

    public void setDiametro(double diametro) {
        this.diametro = diametro;
    }

    public double getMassa() {
        return massa;
    }

    public void setMassa(double massa) {
        this.massa = massa;
    }

    public double getDistanciaDoSol() {
        return distanciaDoSol;
    }

    public void setDistanciaDoSol(double distanciaDoSol) {
        this.distanciaDoSol = distanciaDoSol;
    }
}
